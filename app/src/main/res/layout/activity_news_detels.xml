<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDetels">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/news_layout"
        >
        <ImageView
            android:id="@+id/news_images"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/ashad"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="#B9000000"
            android:gravity="center"
            android:lines="2"
            android:padding="5dp"
            android:text="I pitted ChatGPT against a real financial advisor to help me save for retirement—and the winner is clear"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ScrollView
        android:id="@+id/news_scroolview"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_below="@+id/news_layout"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/news_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="I pitted ChatGPT against a real financial advisor to help me save for retirement—and the winner is clear"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />




        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/news_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:backgroundTint="#0CA5EA"
        android:src="@drawable/voice"
        app:fabSize="normal"
        app:maxImageSize="39dp"
        />




</RelativeLayout>